<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop</title>

    <link rel="stylesheet" type="text/css" href="style.css"/>
    <script src="header.js" defer></script>
</head>
<body>
    <%- include('header.ejs'); %>

    <div class="products">
        <% products.filter(a => a.shownInShop == 1).forEach(item => { %>
            <div class="product">
                <h1><%= item.title %></h1>
                <img src=<%= item.imageUrl %> alt="" />
                <h1>$<%= item.price %></h1>
                <h3><%= item.description %></h2>
                <button id="product-<%= item.id %>" class="add-to-cart">Add To Cart</button>
            </div>
        <% }) %>

        <script>
            const btns = document.getElementsByClassName("add-to-cart");
            for(let i = 0; i < btns.length; i++) {
                btns[i].addEventListener("click", () => {
                    const id = btns[i].id.split("-")[1];
    
                    localStorage.setItem("cart", JSON.stringify([...JSON.parse(localStorage.getItem("cart") || "[]"), id]));
                    alert("Added to cart");
                });
            }
        </script>

